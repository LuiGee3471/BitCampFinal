<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
  
  void insertTroubleShooting(ArticleOption troubleshooting);
  
  void updateTroubleShootingByIssueClosed(int issueclosed);
  
  void selectTroubleShootingByArticleId(int articleid);


 -->

<!-- 작업자: 권순조 -->

<mapper namespace="kr.or.bit.dao.QnaDao">
	
  <insert id="insertTroubleShooting">
  	insert into troubleShooting(Article_id, Group_id)
	values (#{troubleshooting.article_id}, #{troubleshooting.group_id})
  </insert>
  
  <update id="updateTroubleShootingByIssueClosed">
  	{call CHANGE("troubleshooting", ${id})}
  </update>
  
  <select id="selectTroubleShootingByArticleId">
  	select id, issue_closed, article_id, group_id
  	from troubleshooting 
  	where id=${article.id};
  </select>
  
</mapper>